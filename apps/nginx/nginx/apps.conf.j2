# =============================================================================
# Nginx Reverse Proxy Configuration
# Generated by Ansible - Do not edit manually
# =============================================================================

# Default server - catch-all for unmatched requests
server {
    listen 80 default_server;
    server_name _;

    location / {
        return 404 "No service configured for this hostname";
    }

    # Health check endpoint
    location /health {
        return 200 "OK";
        add_header Content-Type text/plain;
    }
}

# =============================================================================
# Service Proxies
# =============================================================================
{% for service_name, service_config in proxy_services.items() %}

# {{ service_name | upper }}
server {
    listen 80;

    # Accept multiple hostnames:
    # - Simple name: {{ service_name }}
    # - FQDN internal: {{ service_name }}.{{ internal_domain }}
    # - Canonical domain: {{ service_name }}.{{ domain_name }}
    server_name {{ service_name }} {{ service_name }}.{{ internal_domain }} {{ service_name }}.{{ domain_name }};

{% if service_config.client_max_body is defined %}
    client_max_body_size {{ service_config.client_max_body }};
{% else %}
    client_max_body_size 10M;
{% endif %}

    location / {
        proxy_pass http://{{ service_config.backend }}/;

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

{% if service_config.websocket | default(false) %}
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts for WebSocket backends
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 86400s;
{% else %}
        # Timeouts for slow backends
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
{% endif %}

        # Buffering settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
}
{% endfor %}

