# Infrastructure secrets for Terraform/Proxmox
# Copy this file to 'infrastructure.env', fill in values, then encrypt with:
# age --passphrase --output infrastructure.age infrastructure.env

# Proxmox authentication for Terraform provider
export PROXMOX_VE_USERNAME=
export PROXMOX_VE_PASSWORD=

# Alternative: API token approach (comment out username/password above if using)
# export PROXMOX_VE_API_TOKEN=

# Optional: Additional Proxmox management credentials
export PM_USER=
export PM_PASS=
export PM_API_TOKEN_ID=
export PM_API_TOKEN_SECRET=