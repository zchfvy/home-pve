# Nginx Proxy CNAME Configuration
# Generated by Ansible - Do not edit manually
#
# Routes all proxied services through the nginx reverse proxy
# Target: {{ nginx_host }}

{% for service in service_names %}
# {{ service | upper }}
# Simple name (internal use)
cname={{ service }},{{ nginx_host }}
# FQDN internal domain
# Automatically set by pihole DHCP, do not configure here
# cname={{ service }}.{{ internal_domain }},{{ nginx_host }}
# External canonical domain
cname={{ service }}.{{ domain_name }},{{ nginx_host }}

{% endfor %}
